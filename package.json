  {
  "name": "landinghub-monorepo",
  "private": true,
  "version": "1.0.0",
  "description": "A monorepo for Landing Hub SaaS platform with web, mobile, and backend",
  "scripts": {
    "install:all": "pnpm install",
    "start:web": "pnpm --filter landinghub-web start",
    "start:mobile": "pnpm --filter landinghub-mobile start",
    "start:backend": "pnpm --filter landinghub-backend start",
    "build:web": "pnpm --filter landinghub-web build",
    "build:mobile": "pnpm --filter mobile build",
    "test:all": "pnpm --filter landinghub-web test && pnpm --filter mobile test && pnpm --filter backend test",
    "clean": "rm -rf node_modules && pnpm install"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend"
  ],
  "devDependencies": {
    "pnpm": "^9.0.0"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "axios": "^1.6.0",
    "@react-oauth/google": "^0.12.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vicute0707/landing-hub.git"
  },
  "author": "Nguyen Thi Tuong Vi",
  "license": "MIT"
}